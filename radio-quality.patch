 void ARCBridge::setup() {
   ESP_LOGCONFIG(TAG, "Setting up ARC Bridge component...");
@@ -72,6 +75,47 @@ void ARCBridge::process_line_(const std::string &line) {
   ESP_LOGD(TAG, "RX: %s", line.c_str());
 
   if (line.size() < 5)
     return;
+
+  std::smatch m;
+
+  // --- Normal position/tilt/radio message ---
+  if (std::regex_search(line, m, std::regex("r(\\d{3})b(\\d{3}),R([0-9A-F]{2})"))) {
+    int pos = std::stoi(m[1]);
+    int tilt = std::stoi(m[2]);
+    int rx = std::stoi(m[3], nullptr, 16);
+    float rf_strength = (255.0f - rx) * 100.0f / 255.0f;
+
+    this->position_ = (100.0f - pos) / 100.0f;
+    this->tilt_ = tilt / 180.0f;
+    this->rf_strength_ = rf_strength;
+    this->error_state_ = "OK";
+
+    ESP_LOGD(TAG, "Decoded: pos=%d tilt=%d RF=%.1f%%", pos, tilt, rf_strength);
+  }
+
+  // --- Error: Not Listening / Not Paired ---
+  else if (std::regex_search(line, m, std::regex("E(n[pl])"))) {
+    std::string code = m[1];
+    if (code == "np") {
+      this->error_state_ = "Not Paired";
+    } else if (code == "nl") {
+      this->error_state_ = "Not Listening";
+    } else {
+      this->error_state_ = "Error";
+    }
+    this->rf_strength_ = 0;
+
+    ESP_LOGW(TAG, "ARC Error: %s", this->error_state_.c_str());
+  }
+
+  // --- Unknown message ---
+  else {
+    ESP_LOGV(TAG, "Unrecognized ARC message: %s", line.c_str());
+  }
+
+  // Publish state updates if applicable
+  this->publish_state_();
 }
 
